.form-horizontal.show_form
  .form-main-with-color{:style=>'background-color: #F1F2F8;'}
    #form-details
      %h3 I -Collect Customer Details 
      %br
      %p{:style => 'text-align:left; padding-left:6px; padding-bottom:17px'}
        - can = can? :edit, @customer
        %a.btn{:href => "#{!(can) ? '#' : edit_customer_path(@customer)}", :role => "button", :class => "btn btn-primary #{(can) ? '' : 'disabled'}"} Edit
        = render 'unapproved_records/approve', :@record => @customer
      %table.table.no-border{:style=>"table-layout: fixed; width: 100%;"}
        - if !@customer.nil?
          %tr
            %td.label Version
            %td.value
              = link_to "#{audit_count(@customer)}", audit_logs_customer_path(@customer, :version_id => audit_count(@customer))
          %tr
            %td.label Enabled?
            %td
              = @customer.is_enabled
            %td#msg-error
              = error_message_for(@customer, :is_enabled, :prepend_text => "")
          %tr
            %td.label App Code
            %td.value
              = @customer.app_code
            %td
          %tr
            %td.label Customer Code
            %td.value
              = @customer.customer_code
            %td
          %tr
            %td.label Validate URL
            %td.value
              = @customer.validate_url
            %td
          %tr
            %td.label Notify URL
            %td.value
              = @customer.notify_url
            %td
          %tr
            %td.label HTTP Username
            %td.value
              = @customer.http_username
            %td
          %tr
            %td.label Retry Notify (in mins)
            %td.value
              = @customer.retry_notify_in_mins
            %td
          %tr
            %td.label Max. Retries for Notify
            %td.value
              = @customer.max_retries_for_notify
            %td
          %tr
            %td.label Created At
            %td.value
              = @customer.created_at.try(:strftime, "%d/%m/%Y %I:%M%p")
            %td
          %tr
            %td.label Updated At
            %td.value
              = @customer.updated_at.try(:strftime, "%d/%m/%Y %I:%M%p")
            %td
          %tr
            - if @customer.settings_cnt.present? and @customer.settings_cnt > 0
              %table.table.datatable{style: 'width: 50%'}
                %thead
                  %tr
                    %th Setting Name
                    %th Setting Value
                %tbody
                  - (1..@customer.settings_cnt).each do |i|
                    %tr
                      %td
                        = @customer.send("setting#{i}_name")
                      %td
                        = @customer.send("setting#{i}_value")
